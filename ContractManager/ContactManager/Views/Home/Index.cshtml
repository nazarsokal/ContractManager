@model List<ContactManager.DTO.GetContactDto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="page-wrapper">
        <h1 class="display-4">Welcome</h1>
        @if (@Model.Count == 0)
        {
            <p>No contacts available</p>
            <form method="get" action="@Url.Action("Upload", "Home")">
                <button type="submit" class="btn btn-primary">Add Sample Contacts</button>
            </form>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Date of Birth</th>
                    <th>Is Married</th>
                    <th>Phone</th>
                    <th>Salary</th>
                    <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var contact in Model)
                {
                    <tr class="contact-row" data-id="@contact.ContactId">
                        <td class="editable" data-field="Name">@contact.Name</td>
                        <td class="editable" data-field="DateOfBirth">
                            @contact.DateOfBirth.ToString("yyyy-MM-dd")
                        </td>
                        <td class="editable" data-field="IsMarried">
                            @(contact.IsMarried ? "Yes" : "No")
                        </td>
                        <td class="editable" data-field="Phone">@contact.Phone</td>
                        <td class="editable" data-field="Salary">@contact.Salary</td>

                        <td class="text-center action-buttons">
                            <button type="button" class="btn btn-sm btn-warning edit-btn">✏️</button>
                            <button type="button" class="btn btn-sm btn-success save-btn d-none">💾</button>
                            <button type="button" class="btn btn-danger btn-sm delete-btn">🗑️</button>
                            <button type="button" class="btn btn-sm btn-secondary cancel-btn d-none">❌</button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
    
</div>

<script src="js/site.js"></script>